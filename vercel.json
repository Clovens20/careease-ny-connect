{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "rewrites": [
      { "source": "/(.*)", "destination": "/" }
    ],
    "redirects": [
      {
        "source": "/admin/*",
        "destination": "/admin",
        "permanent": true
      }
    ],
    "routes": [
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "env": {
      "VITE_SUPABASE_URL": "https://[ton-url-supabase].supabase.co",
      "VITE_SUPABASE_ANON_KEY": "[ta-cl√©-anon]"
    }
  }  